{
	"name": "Banner Schedule Exporter",
	"description": "Extension that exports your class schedule from Banner. Created by Abel Weldaregay.",
	"version": "1.0",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"browser_action": {
		"default_icon": "icons/icon19.png",
		"default_popup": "popup.html"
	},
	"manifest_version": 2,
	"permissions": [
		"activeTab",
		"tabs",
		"identity"
	],
  	"content_security_policy": "object-src 'self'",
  	"background": {
		"scripts": ["background.js"]
	}
}